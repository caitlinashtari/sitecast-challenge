<!DOCTYPE html>
<html>
  <head>
    <title>SitecastChallenge</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="page-top">
  <!-- Collapsible Navbar -->
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
        <a class="navbar-brand d-flex" href="/">Sitecast Challenge</a>
        <ul class="navbar-nav d-flex">
          <li class="nav-item">
            <%= link_to "Blog", blog_index_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Contact", contact_index_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid">
      <%= yield %>
    </div>
  <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <p class="text-muted">&copy; 2017 Caitlin Ashtari All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
